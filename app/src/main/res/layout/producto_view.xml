<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/caramel_frap"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/producto_nombre"
            android:textColor="@color/Condensed"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:textSize="17dp"
            android:text="Caramel Frap" />

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del producto"
            android:textColor="@color/light"
            android:textSize="15dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="19dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/Bold"
        android:textSize="20dp"
        android:text="$5.00"

        />


</LinearLayout>